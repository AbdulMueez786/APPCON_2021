<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRA">

    <EditText
        android:id="@+id/qr_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter ID for QR generation"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/qr_generate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GENERATE"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_text" />

    <ImageView
        android:id="@+id/qr_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_generate" />

    <Button
        android:id="@+id/qr_scan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SCAN FROM GALLERY"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_img" />
    <Button
        android:id="@+id/qr_scan_camera"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SCAN FROM CAMERA"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_scan" />


</androidx.constraintlayout.widget.ConstraintLayout>