<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/goal_header_card"
        android:layout_width="310dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/goal_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/water_donation"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:elevation="10dp"
        android:backgroundTint="#FFF"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@+id/goal_header_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goal_description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Help the Indone..."
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/goal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Armughan Aslam"
                android:textSize="10dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/goal_detail_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:backgroundTint="#219FA7"
            android:background="@drawable/rounded_rectangle"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:tint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>