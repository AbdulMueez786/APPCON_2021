<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.QR">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:id="@+id/ll1_detail"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"

            android:layout_marginTop="20dp"
            android:layout_height="90dp"
            android:weightSum="5"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <ImageButton

                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_rectangle_with_border"
                android:padding="20dp"
                android:src="@drawable/logout"
                android:textAllCaps="false"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Scanner"
                android:layout_weight="5"
                android:textColor="#424141"
                android:clickable="true"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/top_donors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_rectangle_with_border"
                android:padding="20dp"
                android:src="@drawable/top_funders_not_selected"
                android:textAllCaps="false"
                android:textColor="@color/black"/>

        </LinearLayout>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_fileName="70533-qr-code.json"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true" />
        <com.airbnb.lottie.LottieAnimationView
            android:visibility="invisible"
            android:id="@+id/animation_view_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_fileName="io.json"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true" />

        <Button
            android:layout_below="@+id/animation_view_2"
            android:id="@+id/scan_from_gallery"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SCAN FROM GALLERY"
            android:layout_centerInParent="true"
            />
        <Button
            android:layout_below="@+id/scan_from_gallery"
            android:id="@+id/scan_from_camera"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SCAN USING CAMERA"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

</FrameLayout>